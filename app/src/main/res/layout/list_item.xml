<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_event_image"
        android:layout_width="@dimen/event_image"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_centerVertical="true"
        android:background="@color/teal_200"/>
    <LinearLayout
        android:id="@+id/ll_event"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/iv_event_image"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/tv_event_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Event Name"
            android:gravity="center_vertical"
            android:textSize="25sp"
            />
        <TextView
            android:id="@+id/tv_event_location"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Location"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@id/ll_event"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/tv_event_day"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="day"
            android:layout_gravity="end"
            android:textSize="20dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_event_date"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:text="date"
            android:textSize="15dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_event_type"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_gravity="end"
            android:layout_weight="1"/>


    </LinearLayout>




</RelativeLayout>